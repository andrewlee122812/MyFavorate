<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FormButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:onClick">buttonClick</item>
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="FormTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
    </style>

    <style name="HugeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HugeTextStyle.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HugeTextStyle.Red">
        <item name="android:textColor">#990000</item>
    </style>

</resources>
