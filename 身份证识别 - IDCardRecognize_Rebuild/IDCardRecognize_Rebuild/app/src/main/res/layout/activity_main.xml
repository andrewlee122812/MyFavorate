<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_margin_top"
        android:background="@drawable/shape_module2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/global_parent_padding">

        <ImageView
            android:id="@+id/iv_front"
            android:layout_width="@dimen/idcard_image_width"
            android:layout_height="@dimen/idcard_image_height"
            android:src="@drawable/identification" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_margin_top"
            android:text="@string/string_idcard_prompt"
            android:textColor="@color/grey_text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_select_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_margin_top"
            android:background="@drawable/btn_following"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/pick_front"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_margin_top"
        android:background="@drawable/shape_module2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/global_parent_padding">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/idcard_image_width"
            android:layout_height="@dimen/idcard_image_height"
            android:src="@drawable/identification" />

        <Button
            android:id="@+id/btn_select_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_following"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/pick_back"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        style="@style/ButtonStyleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/next" />
</LinearLayout>





