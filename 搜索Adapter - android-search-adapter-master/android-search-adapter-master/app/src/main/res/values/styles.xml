<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Login EditText style -->
    <style name="search_field_style">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">30sp</item>
        <item name="fontPath">fonts/HelveticaNeue-UltraLight.otf</item>
        <item name="android:hint">Type the title...</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/search_field_background</item>
    </style>
</resources>